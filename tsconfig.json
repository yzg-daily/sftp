{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "types": [
      "node",
      "vite/client",
      "element-plus/global",
      "electron/electron.d.ts"
    ],
    "paths": {
      "electron": ["./node_modules/electron"],
      "@": ["./src"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/*d.ts",
    "electron/electron-env.d.ts"
  ],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
